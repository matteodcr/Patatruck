Feu_cuisson(Init){
    *(Init)
    |Key(SPACE) & Cell(F,@) ? Pop:(Cook)         
    
    *(Cook)
    |True ?     Wait:(Cooked)  
    		
    *(Cooked)
    |Key(SPACE) & Cell(F,@) ? Wizz:(Init)  
}

Friteuse(Init){
    *(Init)
    |Key(SPACE) & Cell(F,@) ? Pop:(Cook)         
    
    *(Cook)
    |True ?     Wait:(Cooked)  
    		
    *(Cooked)
    |Key(SPACE) & Cell(F,@) ? Wizz:(Init)     
}

StockTable(Still){
* (Still):
| Cell(F,@) & Key(SPACE) ? Pop(F) :(Still)
| Cell(F,A) ? Pop(F) : (Still)
| !GotStuff() ? Wizz(F) :(Empty)

* (Empty):
| GotStuff() ? :(Full)
| True() ? :(Empty)
}

Table(Vide){
    *(Vide)
    |Cell(H,P) ? Pop:(Pleine)       
    |Cell(H,V) ?    :(Vide)         
    
    *(Pleine)
    |Cell(H,P) ?    :(Pleine)        
    |Cell(H,V) ? Wizz:(Vide)        
}

Table_a_sauce(Still){
