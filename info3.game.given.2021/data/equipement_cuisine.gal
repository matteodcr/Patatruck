    |Key(SPACE) & Cell(F,@)? Wizz():(Still)
    |True ? Pop() :(Still)
}

Planche(Vide){
    *(Vide)
    |Cell(H,P) ? Pop:(StartCoupe)                           
    |Cell(H,V) ?    :(Vide)                                   
    
    *(StartCoupe)
    |Cell(H,P) & Key(SPACE) & Cell(F,@) ? Hit: (Couper1)       
    |True ?    :(StartCoupe)                                   
    
    *(Couper1)
    |Cell(H,P) & Key(SPACE) & Cell(F,@) ? Hit: (Couper2)       
    |True ?    :(Couper1)                                      
    
    *(Couper2)
    |Cell(H,P) & Key(SPACE) & Cell(F,@) ? Hit: (Couper)        
    |True ?    :(Couper2)                                     
    
    *(Couper)
    |Cell(H,V) ? Wizz:(Vide)                                   
    |True ?    :(Couper)                                    
}

